---
const { banner } = Astro.props;
const BASE = import.meta.env.BASE_URL;
---

<div
    class="font-serif italic text-3xl md:text-5xl text-white flex flex-col md:flex-row md:flex-wrap justify-center gap-2 h-80 md:h-[50vh] md:min-h-[280px] w-full"
>
    <img
        src={BASE + "/images/" + banner}
        class="absolute -z-20 h-80 md:h-[50vh] md:min-h-[280px] w-full object-cover blue-tint"
    />
    <svg class="defs-only">
        <filter
            id="blue-tint"
            color-interpolation-filters="sRGB"
            x="0"
            y="0"
            height="100%"
            width="100%"
        >
            <feColorMatrix
                type="matrix"
                values="0.36 0 0 0  0.02 
                        0.44 0 0 0  0.06  
                        0.40 0 0 0  0.16 
                        0  0 0 1  0"
            ></feColorMatrix>
        </filter>
    </svg>
    <slot />
</div>
<style>
    .defs-only {
        position: absolute;
        height: 0;
        width: 0;
        overflow: none;
        left: -100%;
    }

    .blue-tint {
        filter: url(#blue-tint);
    }
</style>
